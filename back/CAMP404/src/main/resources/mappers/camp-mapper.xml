<!--  parameterType="camp.kh.semi.member.model.vo.Camp"-->
<select id="login" parameterType="camp" resultMap="camp_rm">
SELECT USER_NO,
USER_ID,
USER_NAME,
USER_EMAIL,
USER_NICK,
USER_TEL,
USER_ADDR,
TO_CHAR(ENROLL_DT, 'YYYY-MM-DD HH24:MI:SS') AS ENROLL_DT
FROM USERS
WHERE USER_ID = #{userId}
AND USER_PW = #{userPw}
AND SECESSION_FL = 'N'
</select>











