</select>


<!-- 회원 가입 -->
<insert id="signUp" parameterType="users">
  		INSERT INTO USERS VALUES(
  		SEQ_USER_NO.NEXTVAL,
  		#{userId},
  		#{userPw},
  		#{userName},
  		#{userEmail},
  		#{userNick},
  		#{userTel},
  		#{userAddress},
  		DEFAULT, DEFAULT
  		)
</insert>
  
