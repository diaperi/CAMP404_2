	<select id="getClassItems" parameterType="lecture" resultMap="lecture_rm">
	SELECT lecture.*, teacher.TEACHER_NAME 
	FROM LECTURE lecture
	JOIN TEACHER teacher
	ON lecture.TEACHER_NO = teacher.TEACHER_NO
